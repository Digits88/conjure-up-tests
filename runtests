#!/bin/bash

set -eu

TMPDIR=$(mktemp -d)

: ${SPELLDIR:=$TMPDIR/spells}

# Only run core spell tests
: ${CORE_ONLY:=0}

# Only run a single test
: ${SPELLTEST:=""}

# Override cloud to test
: ${CLOUD:=localhost}

# Keep controller?
: ${KEEP:=0}

# Snap channel
: ${CHANNEL:=edge}

export DEBIAN_FRONTEND=noninteractive
sudo -E apt-get -q update
sudo -E apt-get -qyf -o Dpkg::Options::=--force-confdef -o Dpkg::Options::=--force-confold dist-upgrade
sudo -E apt-get install -qyf -o Dpkg::Options::=--force-confdef -o Dpkg::Options::=--force-confold git python3-yaml || true

git clone --depth 1 -q https://github.com/conjure-up/spells $SPELLDIR || true

SDKDIR=$SPELLDIR/sdk
. $SDKDIR/common.sh

testLog "Sanitizing cache directory"
rm -rf ~/.cache/conjure-up* || true

testLog "Remove Kubernetes specific configs"
rm -rf ~/.kube || true
rm -rf ~/bin/kube* || true


if ! snap info conjure-up|grep -q "installed"; then
    testLog "Installing conjure-up from $CHANNEL release"
    sudo snap install conjure-up --classic --$CHANNEL > /dev/null 2>&1 || true
else
    testLog "Upgrading conjure-up from $CHANNEL release"
    sudo snap refresh conjure-up --classic --$CHANNEL > /dev/null 2>&1 || true
fi

export PATH=/snap/bin:$PATH
export JUJU_MODEL=conjure-up-test
export JUJU_CONTROLLER=conjure-up-controller
export CLOUD=$CLOUD

testLog "Juju Version: $(juju version)"
testLog "LXD Version: $(lxd --version)"
testLog "conjure-up Version: $(conjure-up --version)"

core_spells=(kubernetes-core \
                 canonical-kubernetes \
                 openstack-novalxd)

spells=(hadoop-kafka \
            hadoop-processing \
            hadoop-spark \
            realtime-syslog-analytics \
            spark-processing \
            ghost)

do_test() {
    _spell=$1
    testLog "Using spell from $TMPDIR/$_spell"
    conjure-up --notrack $_spell $CLOUD $JUJU_CONTROLLER $JUJU_MODEL --spells-dir $SPELLDIR
    RET=$?
    if [ $RET -ne "0" ]; then
        exit $RET
    fi

    if [ -f $SPELLDIR/$_spell/tests/verify ]; then
        sleep 20
        testLog "Verifying $_spell"
        # Expose spells dir here since the tests will not inherit env vars from conjure-up
        CONJURE_UP_SPELLSDIR=$SPELLDIR $SPELLDIR/$_spell/tests/verify
        RET=$?
        if [ $RET -ne "0" ]; then
            exit $RET
        fi
    fi
    tear_down || true
}

tear_down_model() {
    testLog "Destroying $JUJU_MODEL if exists"
    juju destroy-model -y $JUJU_MODEL > /dev/null 2>&1
}

tear_down() {
    if [ "$KEEP" -eq "0" ]; then
        testLog "Destroying $JUJU_CONTROLLER"
        juju kill-controller -y $JUJU_CONTROLLER > /dev/null 2>&1
    fi
}

run_core_spells() {
    testLog "Running core spell tests"
    for spell in ${core_spells[@]}; do
        do_test $spell
    done
}

run_extended_spells() {
    testLog "Running extended spell tests"
    for spell in ${spells[@]}; do
        do_test $spell
    done
}

tear_down || true

if [ "$SPELLTEST" != "" ]; then
    testLog "Running single test for $SPELLTEST"
    do_test $SPELLTEST
    exit
fi

if [ "$CORE_ONLY" -eq "1" ]; then
    run_core_spells
    exit
else
    run_core_spells
    run_extended_spells
fi

exit 0
